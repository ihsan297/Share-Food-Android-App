<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".shareFoodActivity">

<include
    layout="@layout/bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    ></include>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodName"
        android:layout_marginTop="20dp"
        android:hint="Food Name"
        android:padding="10dp"
        android:background="@drawable/edittext_rounded"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_marginBottom="3dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodLocation"
        android:layout_marginTop="20dp"
        android:hint="Food Location"
        android:padding="10dp"
        android:background="@drawable/edittext_rounded"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_marginBottom="3dp"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act_foodDesc"
        android:layout_marginTop="20dp"
        android:hint="Food Description"
        android:padding="10dp"
        android:background="@drawable/edittext_rounded"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_marginBottom="3dp"/>


    <ImageView
        android:id="@+id/foogImg"
        android:layout_width="350dp"
        android:layout_marginTop="50dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/fooddefaulticon"
        ></ImageView>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/upload"
        android:text="upload"
        android:layout_gravity="center"
        ></Button>


    <Button
        android:id="@+id/postFood"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Post"
        android:background="@drawable/back"
        ></Button>

</LinearLayout>